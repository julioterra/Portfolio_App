<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
 	<%= csrf_meta_tags %>
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "application" %>
  
</head>

<body>
	<div class="container">
		
		<!-- header containing log and navigation menu -->
		<%= render 'layouts/header'%>

		<!-- main content area that is defined in other templates -->
		<section class="round">
			<% flash.each do |key, value| %>
				<%= content_tag :div, value, class: "flash #{key} round"%>
			<% end %>
			
			<%= yield %>
		</section>		
		<%= render 'layouts/footer'%>
		<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
